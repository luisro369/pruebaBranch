<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.luisro00005513.pruebaretrofit.MainActivity"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="game:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/game_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="titulo:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/title_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="body(noticia completa):"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/body_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />

    </LinearLayout>

    <!--- PLAYERS-->

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nombre Player:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/player_name_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="biografia player:"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/biografia_player_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            />


    </LinearLayout>





</LinearLayout>
